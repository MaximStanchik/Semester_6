<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StarGallery</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&family=Space+Grotesk:wght@500;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary: #1d951d;
            --secondary: #1d951d;
            --dark: #1e293b;
            --light: #f8fafc;
            --accent: #c22;
        }

        body {
            font-family: 'Inter', sans-serif;
            background-color: var(--light);
            color: var(--dark);
            line-height: 1.6;
        }

        h1, h2, h3, h4, h5 {
            font-family: 'Space Grotesk', sans-serif;
            font-weight: 700;
            color: var(--dark);
            letter-spacing: -0.5px;
        }

        .celebrity-details {
            display: flex;
            gap: 40px;
            margin: 2rem auto;
            max-width: 1200px;
            flex-wrap: wrap;
            background: white;
            padding: 2rem;
            border-radius: 12px;
            box-shadow: 0 2px 6px rgba(0,0,0,0.03);
            border: 1px solid rgba(0,0,0,0.04);
        }

        .celebrity-image img {
            max-width: 350px;
            width: 100%;
            border-radius: 8px;
            object-fit: cover;
            aspect-ratio: 3/4;
            transition: transform 0.4s ease;
        }

        .celebrity-image:hover img {
            transform: scale(1.02);
        }

        .celebrity-info {
            flex: 1;
            min-width: 300px;
        }

        .life-events {
            list-style: none;
            padding: 0;
            margin-top: 2rem;
        }

            .life-events li {
                padding: 1rem 0;
                border-bottom: 1px solid rgba(0,0,0,0.05);
                position: relative;
                padding-left: 1.5rem;
            }

                .life-events li:before {
                    content: "•";
                    color: var(--primary);
                    position: absolute;
                    left: 0;
                    font-size: 1.5rem;
                    line-height: 1;
                }

        .action-buttons {
            display: flex;
            gap: 1rem;
            margin-top: 2rem;
        }

        .btn {
            border-radius: 8px;
            padding: 0.6rem 1.5rem;
            font-weight: 500;
            letter-spacing: 0.5px;
            transition: all 0.2s ease;
            border: none;
        }

        .btn-primary {
            background-color: var(--primary);
        }

            .btn-primary:hover {
                background-color: var(--secondary);
                transform: translateY(-2px);
            }

        .btn-danger {
            background-color: white;
            color: var(--accent);
            border: 1px solid var(--accent);
        }

            .btn-danger:hover {
                background-color: var(--accent);
                color: white;
                transform: translateY(-2px);
            }

        .wikipedia-links {
            margin-top: 3rem;
        }

            .wikipedia-links ul {
                display: flex;
                flex-wrap: wrap;
                gap: 0.5rem;
                padding: 0;
            }

            .wikipedia-links a {
                color: var(--primary);
                text-decoration: none;
                position: relative;
                padding-bottom: 2px;
            }

                .wikipedia-links a:after {
                    content: "";
                    position: absolute;
                    bottom: 0;
                    left: 0;
                    width: 0;
                    height: 1px;
                    background: var(--primary);
                    transition: width 0.3s ease;
                }

                .wikipedia-links a:hover:after {
                    width: 100%;
                }

        .celebrity-details {
            animation: fadeIn 0.6s ease-out forwards;
        }

        .life-events li {
            opacity: 0;
            animation: fadeIn 0.4s ease-out forwards;
            animation-delay: calc(var(--i) * 0.1s);
        }
    </style>
</head>
<body>
    <div class="container py-4">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('.life-events li').forEach((el, i) => {
                el.style.setProperty('--i', i);
            });
        });
    </script>
</body>
</html>