<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StarGallery</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&family=Playfair+Display:wght@700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary: #6c5ce7;
            --secondary: #a29bfe;
            --dark: #2d3436;
            --light: #f5f6fa;
            --accent: #fd79a8;
        }

        body {
            font-family: 'Montserrat', sans-serif;
            background-color: var(--light);
            color: var(--dark);
            background-image: radial-gradient(circle at 10% 20%, rgba(166, 177, 255, 0.1) 0%, rgba(166, 177, 255, 0.05) 90%);
        }

        h1, h2, h3, h4, h5 {
            font-family: 'Playfair Display', serif;
            color: var(--primary);
        }

        .celebrity-details {
            display: flex;
            gap: 40px;
            margin: 30px;
            flex-wrap: wrap;
            background: white;
            border-radius: 20px;
            padding: 30px;
            box-shadow: 0 10px 30px rgba(108, 92, 231, 0.1);
            transform: perspective(1000px) rotateX(5deg);
            transition: transform 0.5s ease;
        }

            .celebrity-details:hover {
                transform: perspective(1000px) rotateX(0deg);
            }

        .celebrity-image img {
            max-width: 400px;
            border-radius: 15px;
            width: 100%;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
            transition: transform 0.5s ease, box-shadow 0.5s ease;
            border: 5px solid white;
            filter: drop-shadow(0 5px 15px rgba(0, 0, 0, 0.1));
        }

            .celebrity-image img:hover {
                transform: scale(1.03);
                box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
            }

        .celebrity-info {
            flex: 1;
            min-width: 300px;
        }

        .life-events {
            list-style-type: none;
            padding: 0;
            counter-reset: event-counter;
        }

            .life-events li {
                margin-bottom: 15px;
                padding: 20px;
                background: white;
                border-radius: 10px;
                box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
                position: relative;
                transition: transform 0.3s ease;
                border-left: 4px solid var(--accent);
            }

                .life-events li:hover {
                    transform: translateY(-5px);
                }

                .life-events li::before {
                    counter-increment: event-counter;
                    content: counter(event-counter);
                    position: absolute;
                    left: -15px;
                    top: 50%;
                    transform: translateY(-50%);
                    background: var(--primary);
                    color: white;
                    width: 30px;
                    height: 30px;
                    border-radius: 50%;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    font-weight: bold;
                    box-shadow: 0 3px 10px rgba(108, 92, 231, 0.3);
                }

        .action-buttons {
            margin: 30px 0;
            display: flex;
            gap: 15px;
        }

        .btn-primary {
            background-color: var(--primary);
            border: none;
            border-radius: 50px;
            padding: 12px 25px;
            font-weight: bold;
            letter-spacing: 1px;
            box-shadow: 0 5px 15px rgba(108, 92, 231, 0.3);
            transition: all 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #5649c0;
                transform: translateY(-3px);
                box-shadow: 0 8px 20px rgba(108, 92, 231, 0.4);
            }

        .btn-danger {
            background-color: var(--accent);
            border: none;
            border-radius: 50px;
            padding: 12px 25px;
            font-weight: bold;
            letter-spacing: 1px;
            box-shadow: 0 5px 15px rgba(253, 121, 168, 0.3);
            transition: all 0.3s ease;
        }

            .btn-danger:hover {
                background-color: #e84393;
                transform: translateY(-3px);
                box-shadow: 0 8px 20px rgba(253, 121, 168, 0.4);
            }

        .wikipedia-links {
            margin-top: 30px;
            padding: 25px;
            background: white;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
        }

            .wikipedia-links ul {
                display: flex;
                flex-wrap: wrap;
                gap: 10px;
                padding: 0;
            }

            .wikipedia-links li {
                list-style: none;
            }

            .wikipedia-links a {
                display: inline-block;
                padding: 10px 20px;
                background: var(--primary);
                color: white;
                border-radius: 50px;
                text-decoration: none;
                transition: all 0.3s ease;
                box-shadow: 0 3px 10px rgba(108, 92, 231, 0.3);
            }

                .wikipedia-links a:hover {
                    background: #5649c0;
                    transform: translateY(-3px);
                    box-shadow: 0 5px 15px rgba(108, 92, 231, 0.4);
                }

        .modal-content {
            border-radius: 20px;
            border: none;
            overflow: hidden;
            box-shadow: 0 20px 50px rgba(0, 0, 0, 0.2);
        }

        .modal-header {
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            color: white;
            border-bottom: none;
        }

        .modal-footer {
            border-top: none;
            background: var(--light);
        }

        .form-control {
            border-radius: 10px;
            padding: 12px 15px;
            border: 2px solid #dfe6e9;
            transition: all 0.3s ease;
        }

            .form-control:focus {
                border-color: var(--primary);
                box-shadow: 0 0 0 0.25rem rgba(108, 92, 231, 0.25);
            }


        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .celebrity-details {
            animation: fadeIn 0.8s ease-out forwards;
        }

        body::before {
            content: "";
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: url('https://images.unsplash.com/photo-1534796636912-3b95b3ab5986?ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80') center/cover no-repeat;
            opacity: 0.03;
            z-index: -1;
            pointer-events: none;
        }
    </style>
</head>
<body>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const elements = document.querySelectorAll('.life-events li, .wikipedia-links');

            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.style.opacity = '1';
                        entry.target.style.transform = 'translateY(0)';
                    }
                });
            }, { threshold: 0.1 });

            elements.forEach(el => {
                el.style.opacity = '0';
                el.style.transform = 'translateY(20px)';
                el.style.transition = 'all 0.6s ease-out';
                observer.observe(el);
            });
        });
    </script>
</body>
</html>