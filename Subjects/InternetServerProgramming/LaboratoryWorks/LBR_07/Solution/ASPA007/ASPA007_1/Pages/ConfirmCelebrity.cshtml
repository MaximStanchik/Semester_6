@page
@model ConfirmCelebrityModel
@{
    ViewData["Title"] = "Confirm Celebrity";
}

<div class="container">
    <h1 class="text-center mb-5">Confirm Celebrity</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <img src="@Model.PhotoPath/@Model.Celebrity.ReqPhotoPath" class="card-img-top" alt="@Model.Celebrity.FullName">
                <div class="card-body">
                    <h5 class="card-title">@Model.Celebrity.FullName</h5>
                    <p class="card-text">@Model.Celebrity.Nationality</p>
                </div>
            </div>

            <div class="mt-4 text-center">
                <form method="post">
                    <button type="submit" asp-page-handler="Confirm" class="btn btn-success mr-3">Confirm</button>
                    <button type="submit" asp-page-handler="Cancel" class="btn btn-danger">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>