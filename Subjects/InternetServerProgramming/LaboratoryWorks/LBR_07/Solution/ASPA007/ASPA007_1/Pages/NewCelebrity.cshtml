@page
@model NewCelebrityModel
@{
    ViewData["Title"] = "Add New Celebrity";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2 class="mb-4">Add New Celebrity</h2>

            <img src="~/brilliant.jpg"
                 class="card-img-top"
                 alt="Add new celebrity">

            <form method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label asp-for="Celebrity.FullName" class="form-label">Full Name</label>
                    <input asp-for="Celebrity.FullName" class="form-control" required>
                    <span asp-validation-for="Celebrity.FullName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Celebrity.Nationality" class="form-label">Nationality</label>
                    <input asp-for="Celebrity.Nationality" class="form-control" required
                           maxlength="2"
                           pattern="[A-Za-z]{2}"
                           title="Please enter a 2-letter country code (e.g. US, GB, FR)">
                    <span asp-validation-for="Celebrity.Nationality" class="text-danger"></span>
                </div>


                <div class="mb-4">
                    <label asp-for="ImageFile" class="form-label">Photo</label>
                    <input asp-for="ImageFile" type="file" class="form-control" required>
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                    <div class="form-text">Choose the photo.</div>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <a asp-page="/celebrities" class="btn btn-outline-secondary me-md-2">Cancel</a>
                    <button type="submit" class="btn btn-primary">Save Celebrity</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        (function () {
            'use strict'

            var forms = document.querySelectorAll('.needs-validation')

            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }

                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
}